# Cocktail Machine Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
DB_PASSWORD=your_secure_database_password_here

# Supabase Configuration (for web dashboard)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anonymous_key_here

# MQTT Broker Configuration
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=

# Node-RED Configuration
NODE_RED_ADMIN_PASSWORD=admin_password_here

# System Configuration
TIMEZONE=Europe/Paris
NODE_ENV=production

# Web Dashboard Configuration
NEXT_PUBLIC_MQTT_BROKER_URL=ws://localhost:9001
NEXT_PUBLIC_API_URL=http://localhost:1880
